include header

div.container
      ul.breadcrumb
        li.active
          a(href='#step1') Step 1
          span.divider |
        li
          a(href='#step2') Step 2
      .dummy
      .row
        include properties
        #step1
          .span7
            form.form-horizontal
              legend All the items
              .control-group
                table.table.table-striped.table-bordered
                  thead
                    tr
                      th
                        input#series(type='checkbox', name='series')
                      th Name
                      th Author
                  - series.forEach(function(serie){
                    tr(id='#{serie._id}').tree_top_level
                      td
                        input#series(type='checkbox', name='series')
                      td #{serie.name}
                      td #{serie.author}
                        
                  - })
              
              .form-actions
                ul.pager
                  li
                    a#step2Btn(href='#step2') Next
                .dummy
        div
          form.form-horizontal(enctype='multipart/form-data', method='post', action='post')
            #step2
              .span7
                #title
                  h2  Metadata 
                  fieldset
                  .form-actions
                    ul.pager
                      li
                        a(href='#') Save
                    .dummy

      include footer
